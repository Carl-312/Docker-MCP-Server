{
  "name": "docker-mcp-secure",
  "version": "1.0.6",
  "description": "云巡 - 企业级安全的 Docker 容器管理 MCP 服务器，四层纵深防御，只读安全",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "docker-mcp-secure": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/index.ts --transport http --port 3000",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --transport http --port 3000",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "docker",
    "model-context-protocol",
    "ai",
    "llm",
    "container",
    "devops",
    "claude",
    "copilot",
    "cursor"
  ],
  "author": "QoderMCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Carl-312/Docker-MCP-Server"
  },
  "homepage": "https://github.com/Carl-312/Docker-MCP-Server#readme",
  "bugs": {
    "url": "https://github.com/Carl-312/Docker-MCP-Server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dockerode": "^4.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ]
}
